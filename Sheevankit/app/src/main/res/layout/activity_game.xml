<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game"
        android:layout_centerHorizontal="true"
        />


    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/walking_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/editText"
        android:onClick="walkclick"
        android:text="ADD"

        />

    <Button
        android:id="@+id/biking_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/walking_add"
        android:layout_alignStart="@+id/walking_add"
        android:layout_marginTop="10dp"
        android:onClick="bikeclick"
        android:text="biking" />

    <Button
        android:id="@+id/car_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/biking_add"
        android:layout_alignStart="@+id/walking_add"
        android:layout_marginTop="10dp"
        android:onClick="carclick"
        android:text="Car" />

    <Button
        android:id="@+id/bus_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_add"
        android:layout_alignStart="@+id/walking_add"
        android:layout_marginTop="10dp"
        android:onClick="busclick"
        android:text="Bus" />

    <Button
        android:id="@+id/plane_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bus_add"
        android:layout_alignStart="@+id/walking_add"
        android:layout_marginTop="11dp"
        android:onClick="planeclick"
        android:text="Plane" />

    <Button
        android:id="@+id/Rowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plane_add"
        android:layout_alignEnd="@+id/walking_add"
        android:layout_marginTop="10dp"
        android:onClick="rowingclick"
        android:text="Rowing/Punting" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="number"
        android:text=" Walking (km)" />


</RelativeLayout>